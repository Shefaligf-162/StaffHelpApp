<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shefali.staffhelpapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="staffHelp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".profile"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".suspiciousperson"
            android:label="Report Suspicious Person"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".suspiciousobject"
            android:label="Report Suspicious Object"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".report"
            android:label="@string/title_activity_report"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".criminalprofile"
            android:label="@string/title_activity_criminalprofile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".register" />
        <activity
            android:name=".update"
            android:label="Update Profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".myreports"
            android:label="My Reports"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>