<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#003366"></RelativeLayout>
    <ViewFlipper
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="20dp"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/v_flipper"></ViewFlipper>
    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#ffffff"
        app:contentPaddingTop="15dp"
        app:contentPaddingLeft="15dp"
        android:id="@+id/card"
        app:contentPaddingRight="15dp"
        app:contentPaddingBottom="15dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find All Helps At One Place!"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"/>

        </LinearLayout></android.support.v7.widget.CardView>
    <ImageView
        android:layout_below="@id/card"
        android:id="@+id/urgenthelp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/urgenthelp"/>
    <TextView
        android:id="@+id/a1"
        android:layout_below="@id/urgenthelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urgent Help"
        android:textColor="#003366"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"/>
    <ImageView
        android:layout_below="@id/card"
        android:layout_toRightOf="@id/urgenthelp"
        android:layout_width="80dp"
        android:id="@+id/crimeactivity"
        android:layout_height="80dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/crimeactivity"/>
    <TextView
        android:id="@+id/a2"
        android:textColor="#003366"
        android:layout_below="@id/crimeactivity"
        android:layout_toRightOf="@id/a1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crime Activity"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_below="@id/card"
        android:layout_height="80dp"
        android:id="@+id/suspiciousobject"
        android:layout_toRightOf="@id/crimeactivity"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/suspiciousobject"/>
    <TextView
        android:id="@+id/a3"
        android:textColor="#003366"
        android:layout_below="@id/suspiciousobject"
        android:layout_toRightOf="@id/a2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suspicious Object"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"/>
    <ImageView
        android:layout_below="@id/urgenthelp"
        android:id="@+id/medicalemergency"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/medicalhelp"/>
    <TextView
        android:id="@+id/a4"
        android:layout_below="@id/womenhelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical Help"
        android:textColor="#003366"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"/>
    <ImageView
        android:layout_below="@id/crimeactivity"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/medicalemergency"
        android:layout_marginTop="40dp"
        android:id="@+id/womenhelp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/hexagon"/>
    <TextView
        android:textColor="#003366"
        android:id="@+id/a5"
        android:layout_below="@id/womenhelp"
        android:layout_toRightOf="@id/a4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Women Help"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"/>
    <ImageView
        android:layout_toRightOf="@id/womenhelp"
        android:layout_width="80dp"
        android:layout_below="@id/suspiciousobject"
        android:layout_height="80dp"
        android:id="@+id/suspiciousperson"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/suspiciousperson"/>
    <TextView
        android:textColor="#003366"
        android:id="@+id/a6"
        android:layout_below="@id/suspiciousperson"
        android:layout_toRightOf="@id/a5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suspicious person"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"/>

</RelativeLayout>